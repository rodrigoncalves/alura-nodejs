<html>
    <body>
        <div class='erros'>
            <% if(errosValidacao) { %>
                <ul>
                    <% for(var i=0; i<errosValidacao.length; i++) { %>
                        <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                    <% } %>
                </ul>
            <% } %>
        </div>
        <form action="/produtos" method="post">
            <div>
                <label for="titulo">Titulo</label>
                <input type="text" name="titulo" placeholder="Coloque o titulo do livro"/>
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" name="preco" placeholder="150.25"/>
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea name="descricao" id="" cols="10" rows="10" placeholder="Fale sobre o livro"></textarea>
            </div>

            <input type="submit" value="salvar"/>
        </form>
    </body>
</html>
